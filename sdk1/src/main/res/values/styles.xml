<resources>

    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/com_ms_module_dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/com_ms_module_dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>


    <style name="BaseDialogStyle">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--点击非dialog关闭-->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="ProgressViewDialogStyle" parent="BaseDialogStyle">
        <!-- 对话框动画 -->
        <item name="android:windowAnimationStyle">@style/PopWindowAnimStyle</item>
    </style>


</resources>